<% layout('layout') %>

<p class="main-title"><%= title %></p>

<form action="/login" method="post" class="board-form">
  <span class="label">Eメール</span><input type="email" name="email" class="input" required>
  <span class="label">パスワード</span><input type="password" name="password" class="input" required>
  <button type="submit" class="submit">ログイン</button>
</form>

<% if (typeof noUser !== 'undefined') { %>
  <p class="error"><%= noUser %></p>
<% } %>

<a href="/" class="btn">トップへもどる</a>